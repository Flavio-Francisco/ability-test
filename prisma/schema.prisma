generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movie {
  id           Int      @id @default(autoincrement())
  title        String
  overview     String
  releaseYear  Int
  price        Float
  rented       Boolean  @default(false)
  posterPath   String
  userId       Int?   
  user         User?    @relation(fields: [userId], references: [id]) 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  gender       String?
}

model User {
  id                Int      @id @default(autoincrement())
  cpf               String   @unique
  name              String
  email             String   @unique
  birthDate         DateTime
  phone             String
  password          String
  isAdmin           Boolean  @default(false)
  rentedMovies      Movie[]  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}